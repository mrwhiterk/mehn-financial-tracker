{{#if account}}
<h2>{{ account.name }}</h2>
<ul class="accounts">

  <div class="grid-container">
    {{!-- <div class="grid-item"><a href="account/show/{{id}}">{{ account.name }}</a></div> --}}
    <div class="grid-item">{{ account.type }}</div>
    <div class="grid-item">X-{{ account.lastFour }}</div>
    <div class="grid-item">{{ account.balance }}</div>

    <!-- Button trigger modal -->
    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#editModal">
      Edit
    </button>

    <!-- Modal -->
    <div class="modal fade" id="editModal" tabindex="-1" role="dialog" aria-labelledby="editModalLabel"
      aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="editModalLabel">Edit</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <form action="/account/{{account.id}}?_method=PUT" method="post" class="row">
              <textarea name="account[name]" cols="30" rows="1">{{account.name}}</textarea>
              <textarea name="account[type]" cols="30" rows="1">{{account.type}}</textarea>
              <textarea name="account[lastFour]" cols="30" rows="1">{{account.lastFour}}</textarea>
              <textarea name="account[balance]" cols="30" rows="1">{{account.balance}}</textarea>
              <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="submit" class="btn btn-primary">Save changes</button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>

  </div>

</ul>
{{/if}}