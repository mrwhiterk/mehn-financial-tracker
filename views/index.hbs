{{#if accounts}}
<h3>Accounts</h3>
<div class="flex-container">
  <div>
    <div class="grid-container-acct-header sub-text">
      <div class="grid-item">Name</div>
      <div class="grid-item">Type</div>
      <div class="grid-item">Acct #</div>
      <div class="grid-item">Bal</div>
    </div>
    {{#each accounts}}
    <div class="grid-container">
      <div class="grid-item"><a href="account/{{id}}">{{ name }}</a></div>
      <div class="grid-item">{{ type }}</div>
      <div class="grid-item">X-{{ lastFour }}</div>
      <div class="grid-item">{{formatNumber balance style="currency" currency="USD"}}</div>
    </div>
    {{/each}}
  </div>
  <div style="width: 300px">
    <h3>Networth: {{formatNumber networth style="currency" currency="USD"}}</h3>
    <div>
      <a href="transaction/">
        <button class="btn btn-success">View All Transactions</button>
      </a>
    </div>
    <br>
    <div>
      <a href="transaction/credit">
        <button class="btn btn-success">View All Income</button>
      </a>
    </div>
    <br>
    <div>
      <a href="transaction/debit">
        <button class="btn btn-success">View All Expenses</button>
      </a>
    </div>
  </div>

</div>
</div>


{{/if}}
<!-- Button trigger modal -->
<button type="button" class="btn btn-success" data-toggle="modal" data-target="#addModal">
  Add Account
</button>

<!-- Modal -->
<div class="modal fade" id="addModal" tabindex="-1" role="dialog" aria-labelledby="addModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="addModalLabel">Add new account</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">

        <form action="/account" method="post">
          <p class="input-field">
            <label for="name">Name</label>
            <input name="account[name]" placeholder="title" class="form-control input-lg" required>
          </p>
          <p class="input-field">
            <label for="name">Type</label>
            <input name="account[type]" placeholder="type" class="form-control input-lg" required>
          </p>
          <p class="input-field">
            <label for="name">Acct #</label>
            <input name="account[lastFour]" placeholder="last 4 digits of acct" class="form-control input-lg" required>
          </p>

          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            <button type="submit" class="btn btn-primary">Save changes</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>